<div class="raiting">
    <div class="star-source">
        <svg>
            <linearGradient x1="50%" y1="5.41294643%" x2="87.5527344%" y2="65.4921875%" id="grad">
                <stop stop-color="gold" offset="0%"></stop>
                <stop stop-color="gold" offset="60%"></stop>
                <stop stop-color="gold" offset="100%"></stop>
            </linearGradient>
            <symbol id="star" viewBox="153 89 106 108">
                <polygon id="star-shape" stroke="url(#grad)" stroke-width="5" fill="currentColor" points="206 162.5 176.610737 185.45085 189.356511 150.407797 158.447174 129.54915 195.713758 130.842203 206 95 216.286242 130.842203 253.552826 129.54915 222.643489 150.407797 235.389263 185.45085"></polygon>
            </symbol>
        </svg>
    </div>
    <InputRadioGroup @bind-Value="Value" Name="raiting">
        <div class="star-container">
            <InputRadio type="radio" Name="raiting" id="five" Value="5" />
            <label for="five">
                <svg class="star">
                    <use xlink:href="#star" />
                </svg>
            </label>
            <InputRadio type="radio" Name="raiting" id="four" Value="4" />
            <label for="four">
                <svg class="star">
                    <use xlink:href="#star" />
                </svg>
            </label>
            <InputRadio type="radio" Name="raiting" id="three" Value="3" />
            <label for="three">
                <svg class="star">
                    <use xlink:href="#star" />
                </svg>
            </label>
            <InputRadio type="radio" Name="raiting" id="two" Value="2" />
            <label for="two">
                <svg class="star">
                    <use xlink:href="#star" />
                </svg>
            </label>
            <InputRadio type="radio" Name="raiting" id="one" Value="1" />
            <label for="one">
                <svg class="star">
                    <use xlink:href="#star" />
                </svg>
            </label>
            <InputRadio type="radio" Name="raiting" id="zero" Value="0" />
            <label for="zero" class="raiting__zero">&#10006;</label>
        </div>
    </InputRadioGroup>
</div>

@code {
    private int _rating = 0;

    [Parameter]
    public int Value { 
        get => _rating;
        set
        {
            if (_rating != value)
            {
                _rating = value;
                ValueChanged?.InvokeAsync(_rating);
            }
        } 
    }

    [Parameter]
    public EventCallback<int>? ValueChanged { get; set; }
}
